{% extends 'base.html.twig' %}

{% block title %}StateHistory index{% endblock %}

{% block body %}
    <h1>StateHistory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datetime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for state_history in state_histories %}
            <tr>
                <td>{{ state_history.id }}</td>
                <td>{{ state_history.datetime ? state_history.datetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_state_history_show', {'id': state_history.id}) }}">show</a>
                    <a href="{{ path('app_state_history_edit', {'id': state_history.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_state_history_new') }}">Create new</a>
{% endblock %}
